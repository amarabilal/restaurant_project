<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}DishIt{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">DishIt</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_user_index') }}">Users</a></li>
                        {% endif %}
                        {% if is_granted('ROLE_GERANT') or is_granted('ROLE_ADMIN') %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_restaurant_index') }}">Restaurants</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_menu_index') }}">Menus</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_restaurant_table_index') }}">Tables</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_category_index') }}">Categories</a></li>
                        {% endif %}
                        {% if is_granted('ROLE_USER') %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_reservation_index') }}">Reservations</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_review_index') }}">Reviews</a></li>
                        {% endif %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Logout</a></li>
                    {% else %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}">Register</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        {% block body %}{% endblock %}
    </div>
</body>
</html>
