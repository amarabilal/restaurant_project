{% extends 'base.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}
<h1 class="mb-4">Category Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">{{ category.name }}</h5>
    </div>
</div>

<a href="{{ path('app_category_index') }}" class="btn btn-secondary mt-4">Back to Categories</a>
{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning mt-4">Edit</a>
    <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" style="display:inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
        <button class="btn btn-danger mt-4" onclick="return confirm('Are you sure?');">Delete</button>
    </form>
{% endif %}
{% endblock %}